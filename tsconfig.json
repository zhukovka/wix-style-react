{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "strict": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "baseUrl": "./",
    "paths": {
        "*": [ "node_modules/@types/*", "*"]
    },
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "./node_modules/wix-ui-core/dist/src/globals.d.ts",
    "./node_modules/wix-ui-core/dist/src/types.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js"
  ]
}
